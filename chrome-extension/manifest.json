{
    "manifest_version":  3,
    "name":  "Digg Daily Player",
    "version":  "1.0.0",
    "description":  "Quick access to the daily Digg Daily AI-generated news digest",
    "permissions":  [
                        "storage"
                    ],
    "host_permissions":  [
                             "https://digg.com/*",
                             "https://drive.google.com/*"
                         ],
    "action":  {
                   "default_popup":  "popup.html",
                   "default_icon":  {
                                        "16":  "icons/icon16.png",
                                        "48":  "icons/icon48.png",
                                        "128":  "icons/icon128.png"
                                    },
                   "default_title":  "Digg Daily"
               },
    "icons":  {
                  "16":  "icons/icon16.png",
                  "48":  "icons/icon48.png",
                  "128":  "icons/icon128.png"
              },
    "background":  {
                       "service_worker":  "background.js"
                   },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "https://digg.com/*"
                                            ],
                                "js":  [
                                           "content.js"
                                       ],
                                "css":  [
                                            "content.css"
                                        ]
                            }
                        ]
}
